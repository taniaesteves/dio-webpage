html
	head
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		title DIO
		link(rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css')
		// Bootstrap CSS CDN
		link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css' integrity='sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4' crossorigin='anonymous')

		link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css')
		// Our Custom CSS
		link(rel='stylesheet' href='/css/style5.css')
		link(rel='stylesheet' href='/css/styleSites.css')
		link(rel='stylesheet' href='/css/specImg.css')

		// Font Awesome JS
		script(defer='' src='https://use.fontawesome.com/releases/v5.0.13/js/solid.js' integrity='sha384-tzzSw1/Vo+0N5UhStP3bvwWPq+uvzCMfrN1fEFe+xBmv1C/AtVX5K0uZtmcHitFZ' crossorigin='anonymous')

	body

		#myModal.modal
			span.closeMyModal &times;
			img#myModalImg.modal-content
			h3#caption
			#description

		.wrapper
			nav#sidebar
				.sidebar-header
					h3 DIO
				ul.list-unstyled.components
					p A tool for diagnosing applications I/O behavior
					li(class=path=='/'?'active':undefined)
						a(href='/') Home
					li(class=path=='usage'?'active':undefined)
						a(href='usage') How to use
					li#usecases-menu
						a.dropdown-toggle(href='#usecasesMenu' data-toggle='collapse' aria-expanded='false') Use cases
					ul#usecasesMenu.collapse.list-unstyled(class='show')
						//- li(class=path=="redis"?'active':undefined)
						//- 	a(href='/redis') Redis
						//- li(class=path=="elasticsearch"?'active':undefined)
						//- 	a(href='/elasticsearch') Elasticsearch
						li(class=path(class="<%= === 'fluentbit' && 'active' %>"))
							a(href='/fluentbit') Fluent Bit
						li(class=path=="rocksdb"?'active':undefined)
							a(href='/rocksdb') RocksDB
					//- li(class=path=="faq"?'active':undefined)
					//- 	a(href='/faq') FAQ
					li(class=path=="contact"?'active':undefined)
						a(href='/contact') Contacts
				ul.list-unstyled.CTAs
					li
						a(href='https://github.com/dsrhaslab/dio' target='_blank')
							i.fab.fa-github(style='font-size:28px')
							|  GitHub

			#wrapper-content
				nav#navbar.navbar.navbar-expand-lg.fixed-top
					.container-fluid
						button#sidebarCollapse.navbar-btn(type='button')
							span
							span
							span
						ul.nav.navbar-nav.ml-auto
							block navbar-options

				#main-content
					#content
						block content


		// jQuery CDN - Slim version (=without AJAX)
		script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js' integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo' crossorigin='anonymous')
		// Popper.JS
		script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js' integrity='sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ' crossorigin='anonymous')
		// Bootstrap JS
		script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js' integrity='sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm' crossorigin='anonymous')
		script(src='/js/zoomImg.js')
		script(type='text/javascript').
			$(document).ready(function () {
				$('#sidebarCollapse').on('click', function () {
					$('#sidebar').toggleClass('active');
					$(this).toggleClass('active');
				});
			});
